<%= simple_form_for @restaurant do |f| %>
        <div class="mb-3">
          <%= f.input :name, input_html: { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.input :address, input_html: { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.input :phone_number, input_html: { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"], prompt: "Select a category", input_html: { class: 'form-control' } %>
        </div>
        <div class="text-center">
          <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      <% end %>
